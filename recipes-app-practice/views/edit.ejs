<% include ./partials/header %>

<div class="container mb-4">
  <form class="mb-4" action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input name="recipe[title]" type="text" class="form-control" id="title" required value="<%= recipe.title %>">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input name="recipe[description]" type="text" class="form-control" id="description" required value="<%= recipe.description %>">
      <small id="descriptionHelp" class="form-text text-muted">Write a short description for your recipe.</small>
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input name="recipe[image]" type="text" class="form-control" id="image" required value="<%= recipe.image %>">
      <small id="imageHelp" class="form-text text-muted">Add a url of an example for this recipe.</small>
    </div>
    <div class="form-group">
      <label for="ingredients">Ingredients</label>
      <textarea name="recipe[ingredients]" class="form-control" id="ingredients" rows="4" placeholder="List your ingredients here, separated by commas."><%= recipe.ingredients %></textarea>
    </div>
    <div class="form-group">
      <label for="instructions">Instructions</label>
      <textarea name="recipe[instructions]" class="form-control" id="instructions" rows="4" placeholder="Write your instructions here, using full sentences separated by periods."><%= recipe.instructions %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/recipes/<%= recipe._id %>" role="button" class="btn btn-warning">Cancel</a>
  </form>
    
  <form class="form-group" action="/recipes/<%= recipe._id %>/?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-outline-danger">Delete This Post</button>
  </form>
  
</div>

<% include ./partials/footer %>