<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%= blogPost.title %>
    </div>
    <form class="ui form" action="/blogs/<%= blogPost._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" required value="<%= blogPost.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" required value="<%= blogPost.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= blogPost.body %></textarea>
        </div>
        <input class="ui purple basic button big" type="submit" value="Save Changes">
        <a href="/blogs/<%= blogPost._id %>" class="ui red basic button big">Cancel</a>
</form>
</div>

<% include ./partials/footer %>