<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= blogPost.title %>
    </div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blogPost.image %>">
                <div class="content">
                    <span><%= blogPost.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- blogPost.body %></p>
                </div>
            </div>
        </div>
        <a class="ui blue basic button big" href="/blogs/<%= blogPost._id %>/edit">Edit this post</a>
        <form id="delete" action="/blogs/<%= blogPost._id %>?_method=DELETE" method="POST">
            <input class="ui red basic button big" type="submit" value="Delete this post">
        </form>
    </div>

<% include ./partials/footer %>