<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">
        Hello Friend
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(blogPost => { %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blogPost.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="blogs/<%= blogPost._id %>"><%= blogPost.title %></a>
                        <div class="meta">
                            <span><%= blogPost.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p>
                                <% let subBody = blogPost.body.substring(0, 150).split(" ") %>
                                <% subBody.splice(-1, 1) %>
                                <%- subBody.join(" ") + "..." %>
                            </p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic blue button" href="/blogs/<%= blogPost._id %>">Read More <i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>