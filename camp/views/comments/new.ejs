<% include ./../partials/header %>

<div class="container">
  <!-- <div class="row"> -->

  <h1 class="mb-4" style="text-align: center;">
    Add New Comment to <%= campground.name %>
  </h1>

  <div style="width: 30%; margin: 0 auto;">

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <textarea class="form-control" name="comment[text]" rows="8" cols="40" placeholder="Write a review."></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>

    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
  </div>
  <!-- </div> -->
</div>
<% include ./../partials/footer %>